package layout

import "fmt"

css headerClass(percent int) {
    background: { templ.SafeCSSProperty("var(--color-bg-dark)") };
    margin: { "0 auto" };
    display: { "flex" };
    flex-direction: { "column" };
    align-items: { "center" };
    text-align: { "center" };
    gap: { "12px" };
    width: { fmt.Sprintf("%d%%", percent) };
}

templ Header() {
    <div class={headerClass(100)}>
        @Menu()
        { children... }
    </div>
}